<div class='panel panel-info'>
  <div class='panel-heading'>
    <h3 class='panel-title'>Gallery Categories</h3>
  </div>
  <div class='panel-body'>
    <div class='row'>
      <div class='col-md-6'
        <% if @categories.present? %>
          <ul class='list-group'>
            <% @categories.each do |c| %>
              <li class='list-group-item clearfix'>
                <%= c.name %>
                <span class='pull-right'>
                  <%= link_to 'Edit', edit_gallery_category_path(c), class: 'btn btn-primary'%>
                  <%= link_to 'Delete', gallery_category_path(c), method: 'delete', class: 'btn btn-danger'%>
                </span>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
